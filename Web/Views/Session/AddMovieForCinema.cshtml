@using Microsoft.AspNetCore.Http
@model Web.Models.SessionUI

@{
	ViewData["Title"] = "AddMovieForCinema";
}

<h1>Add movie for cinema</h1>

<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="AddMovieForCinema">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Price" class="control-label"></label>
				<input asp-for="Price" class="form-control" />
				<span asp-validation-for="Price" class="text-danger"></span>
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-controller="Movie" asp-action="GetOnlyMovieWithoutSession" asp-route-id="@Context.Session.GetString("idHall")">Back to movies</a>
</div>

