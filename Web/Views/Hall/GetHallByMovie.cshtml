@using Microsoft.AspNetCore.Http
@model IEnumerable<Web.Models.HallUI>

@{
	ViewData["Title"] = "GetHallByMovie";
}

<h1>All halls in this cinema</h1>

@if (Context.Session.GetString("loginUser") == "Admin")
{
	<table class="table">
		<thead>
			<tr>
				<th>
					<div>Number Hall</div><br />
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Id)
					</td>
					@Html.HiddenFor(modelItem => item.IdCinema)
					<td>
						@Html.ActionLink("See areas", "GetAreasByIdHall", "Area", new {  id=item.Id })
					</td>
				</tr>
			}
		</tbody>
	</table>
}
else
{
	<table class="table">
		<thead>
			<tr>
				<th>
					<div>Number Hall</div><br />
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Id)
					</td>
					@Html.HiddenFor(modelItem => item.IdCinema)
					<td>
						@Html.ActionLink("See areas", "GetAreasByIdHall", "Area", new {  id=item.Id })
					</td>
				</tr>
			}
		</tbody>
	</table>

}
