@model Web.Models.AreaUI

@{
	ViewData["Title"] = "AddArea";
}

<h1>Add Area</h1>

<hr />
<div class="row">
	<div class="col-md-4">
		<form asp-action="AddArea">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label class="control-label">Qantity Rows</label>
				<input name="quantityRows" class="form-control" />
			</div>
			<div class="form-group">
				<label class="control-label">Qantity places in row</label>
				<input name="quantityPlacesInRow" class="form-control" />
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-controller="Area" asp-action="ReturnToHall">Back to hall</a>
</div>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}
